{
    "name": "appointment-scheduler-backend",
    "version": "1.0.1",
    "description": "Appointment Scheduler API Server with SQLite3 and TypeScript",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "ts-node-dev --respawn --transpile-only src/server.ts",
        "start:prod": "node dist/server.js",
            "db:init": "ts-node src/database/init.ts",
            "mongo:test": "ts-node src/database/testMongoConnection.ts",
                "mongo:migrate": "ts-node src/database/migrateSqliteToMongo.ts",
                "mongo:to-sqlite": "ts-node src/database/migrateMongoToSqlite.ts"
    },
    "dependencies": {
        "@types/nodemailer": "^7.0.3",
        "mongodb": "^5.7.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "jsonwebtoken": "^9.0.2",
        "nodemailer": "^7.0.10",
        "sqlite3": "^5.1.6",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.10.5",
        "@types/sqlite3": "^3.1.11",
        "@types/uuid": "^9.0.7",
        "nodemon": "^3.0.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}
